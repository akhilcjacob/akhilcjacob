---
// ProjectGrid.astro
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Project {
  title: string;
  description: string;
  tech: string[];
  appUrl: string;
  landingPageUrl: string;
  screenshots: string[];
  videoUrl?: string;
  categories: string[];
  imageOpacity?: number;
  type: "web" | "mobile";
}

interface ProjectPair {
  name: string;
  projects: Project[];
  type: "web" | "mobile";
}

interface Props {
  title: string;
  projects: ProjectPair[];
  class?: string;
  mode?: "web-row" | "mobile-grid";
}

const { title, projects, class: className, mode = "web-row" } = Astro.props;
---

<div class="mb-12">
  <h2 class="text-5xl font-extrabold mb-8 relative z-10">
    <span class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-transparent bg-clip-text">
      {title}
    </span>
  </h2>
</div>

<div class={`grid grid-cols-1 md:grid-cols-2 gap-8 w-full ${className ?? ""}`}>
  {projects.map((projectPair) => (
    <div class="flex flex-col rounded-3xl overflow-hidden bg-[#0A0A0A]/80 border border-gray-800 hover:border-gray-700 transition-colors h-full">
      <div class="p-5">
        <h3 class="text-xl font-bold text-white mb-2">{projectPair.name}</h3>
        {projectPair.projects.map((project) => (
          <div class="mb-4">
            <div class="rounded-t-3xl overflow-hidden relative group max-h-[320px]">
              <Image
                src={project.screenshots[0]}
                alt={project.title}
                width={project.type === "web" ? 1920 : 828}
                height={project.type === "web" ? 320 : 1828}
                class="w-full h-full object-contain object-top transition-opacity duration-300 group-hover:opacity-30"
                style={project.imageOpacity ? `opacity: ${project.imageOpacity / 100}` : ""}
              />
            </div>
            <p class="text-sm text-gray-300 mt-4 line-clamp-3">
              {project.description}
            </p>
            <div class="flex flex-wrap gap-1.5 mt-4">
              {project.tech.map((tech) => (
                <span class="text-xs bg-gray-800 text-gray-300 px-2 py-0.5 rounded-full">
                  {tech}
                </span>
              ))}
            </div>
            <div class="flex flex-col gap-2 mt-4">
              <a
                href={project.appUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center text-sm bg-blue-600 text-white px-3 py-1.5 rounded-lg hover:bg-blue-700 transition-colors"
              >
                Open App
                <Icon name="ri:external-link-line" class="ml-1.5 w-4 h-4" />
              </a>
              <a
                href={project.landingPageUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center text-sm border border-gray-700 text-gray-300 px-3 py-1.5 rounded-lg hover:bg-gray-800 transition-colors"
              >
                View Landing Page
                <Icon name="ri:arrow-right-line" class="ml-1.5 w-4 h-4" />
              </a>
              <button class="inline-flex items-center justify-center text-sm bg-purple-600 text-white px-3 py-1.5 rounded-lg hover:bg-purple-700 transition-colors">
                Build Your Own
                <Icon name="ri:arrow-right-line" class="ml-1.5 w-4 h-4" />
