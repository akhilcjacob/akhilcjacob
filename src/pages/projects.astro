      ></div>
      <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-[#4169E1] opacity-[0.15] blur-[128px] rounded-full"></div>
      <div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] bg-[#1E90FF] opacity-[0.15] blur-[96px] rounded-full"></div>
    </div>

    <div class="container mx-auto px-4 py-16 relative z-10">
      {/*
        Hero Section with fadeIn animation
      */}
      <header class="text-center mb-20 animate-fadeInUp">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white mb-4 tracking-tight">
          Projects
        </h1>
        <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto">
          A portfolio of work that speaks for itself. Each project represents a blend of design, technology, and passion.
        </p>
      </header>

      {/*
        Projects Showcase Section: Each project pair is displayed as a segmented glassmorphic card.
      */}
      <section class="mb-24">
        <div class="grid gap-16">
          {projectsData.map((pair, pairIndex) => (
            <div
              key={pair.name}
              class="bg-white/10 backdrop-blur-md rounded-3xl shadow-2xl transform hover:scale-105 transition-transform duration-300 animate-popIn"
              style="animation-delay: calc(0.2s * var(--pair-index));"
              style={`--pair-index: ${pairIndex}`}
            >
              <div class="px-8 py-6 bg-gradient-to-r from-blue-500 to-purple-500 bg-opacity-30 rounded-t-3xl">
                <h2 class="text-2xl md:text-3xl font-bold text-white">{pair.name}</h2>
              </div>
              <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {pair.projects.map((project) => (
                    <div
                      key={project.title}
                      class="bg-black/40 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg transition-all duration-300 hover:shadow-2xl"
                    >
                      {(() => {
                        const isLandingPage = project.title.toLowerCase().includes("landing");
                        const isMobileScreenshot = project.type === "mobile" && !isLandingPage;
                        if (isMobileScreenshot) {
                          // Mobile app screenshot (portrait view)
                          return (
                            <div class="w-full aspect-[9/16] relative">
                              <Image
                                src={project.screenshots[0]}
                                alt={project.title}
                                width={828}
                                height={1828}
                                class="w-full h-full object-contain"
                                style={project.imageOpacity ? `opacity: ${project.imageOpacity / 100}` : ""}
                              />
                            </div>
                          );
                        } else {
                          // Desktop screenshot (for web projects or mobile landing pages)
                          return (
                            <div class="w-full h-48 relative overflow-hidden">
                              <Image
                                src={project.screenshots[0]}
                                alt={project.title}
                                width={1920}
                                height={320}
                                class="w-full h-full object-cover"
                                style={project.imageOpacity ? `opacity: ${project.imageOpacity / 100}` : ""}
                              />
                            </div>
                          );
                        }
                      })()}
                      <div class="p-4">
                        <h3 class="text-xl md:text-2xl font-semibold text-white">{project.title}</h3>
                        <p class="text-sm md:text-base text-gray-300 mt-2">{project.description}</p>
                        <div class="flex flex-wrap gap-2 mt-3">
                          {project.tech.map((tech) => (
                            <span key={tech} class="text-xs md:text-sm bg-white/20 text-white px-3 py-1 rounded-full">
                              {tech}
                            </span>
                          ))}
                        </div>
                        <div class="mt-4 flex gap-2">
                          <a
                            href={project.appUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex-1 text-center bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors duration-200"
                          >
                            {project.title.toLowerCase().includes("app") ? "Open App" : "Visit"}
                          </a>
                          <a
                            href={project.landingPageUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex-1 text-center border border-white/30 hover:bg-white/20 text-white px-4 py-2 rounded transition-colors duration-200"
                          >
                            {project.title.toLowerCase().includes("landing") ? "View Landing" : "Learn More"}
                          </a>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </section>

      {/*
        Overall Call-to-Action Section
      */}
      <section id="mvp-contact" class="mt-24 animate-fadeInUp">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
            <span class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-transparent bg-clip-text">
              Inspired?
            </span>
          </h2>
          <p class="text-lg md:text-xl text-gray-300">
            If you like what you see and dream of your own custom project, let's chat.
          </p>
        </div>
        <div class="bg-white/10 backdrop-blur-md p-8 rounded-3xl border border-white/20 max-w-2xl mx-auto shadow-2xl">
          <h3 class="text-2xl md:text-3xl font-bold text-white mb-6">Get in Touch</h3>
          <form action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            <input type="hidden" name="access_key" value="YOUR-ACCESS-KEY-HERE" />
            <input type="hidden" name="subject" value="New Project Inquiry" />
            <div>
              <label for="name" class="block text-sm font-medium text-white mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-black/50 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-white mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-black/50 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-white mb-2">Project Details</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 bg-black/50 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200"
            >
              Let's Talk
            </button>
          </form>
        </div>
      </section>
    </div>
  </div>
</BasicLayout>
