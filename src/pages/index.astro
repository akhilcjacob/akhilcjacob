---
import Layout from "../layouts/Layout.astro";
import IntroCard from "../components/IntroCard.astro";
import ContactCard from "../components/ContactCard.astro";
import WorkCard from "../components/WorkCard.astro";
import ProjectsCard from "../components/ProjectsCard.astro";
import SkillsCard from "../components/SkillsCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import ProfileCard from "../components/ProfileCard.astro";
import GlobeCard from "../components/GlobeCard.astro";
import MVPBadge from "../components/MVPBadge.astro";

// Get viewport width to determine if mobile
const isMobile = () => {
  if (typeof window !== 'undefined') {
    return window.innerWidth < 768;
  }
  return false;
};

const pageTitle = "Akhil Jacob - Software Engineer & Entrepreneur";
const pageDescription = "I'm a software engineer and entrepreneur with a drive for end-to-end innovation. I've launched AI-driven apps, built scalable backend systems, and embraced rapid iteration in both startup and enterprise settings.";

---

<Layout
  title={pageTitle}
  description={pageDescription}
>
<MVPBadge />
<main
  class="text-white m-auto p-2 grid gap-2 max-w-6xl overflow-hidden relative w-full 
         grid-cols-1 sm:grid-cols-2 sm:p-4 sm:gap-2 
         md:grid-cols-3 md:gap-3 md:p-6 
         lg:h-screen lg:grid-rows-4 lg:grid-cols-4 lg:gap-4 lg:max-h-[800px] 
         [&>*]:min-h-[100px]"
>



    <!-- Main Content Cards -->
    <ProfileCard class="" />

    <ContactCard class="order-2 md:order-3" />
    <IntroCard class="col-span-2 sm:col-span-1 order-3 md:order-2" />
    <WorkCard class="order-5 md:order-4" />
    <TimeZone class="order-4 md:order-5 min-h-[200px] md:min-h-0" />
    
    <!-- Globe Card -->
    <GlobeCard />

    <!-- Additional Cards -->
    <ProjectsCard class="order-6 md:order-7" />
    <SkillsCard class="order-8 md:order-8" />
  </main>
</Layout>

<script>
  import { cardEntryAnimation } from "../lib/animations";
  
  // Initialize animation once DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    cardEntryAnimation();
  });
</script>
