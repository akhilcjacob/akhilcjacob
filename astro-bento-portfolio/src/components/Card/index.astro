---
import { Icon } from "astro-icon/components";
import Content from "./Content.astro";

interface Props {
  title?: string;
  body?: string;
  colSpan?: string;
  rowSpan?: string;
  href?: string;
  colorText?: string;
  height?: string;
  width?: string;
  expandable?: boolean;
}

const { title, body, colSpan, rowSpan, href, colorText, height, expandable } = Astro.props;
---
<div
  class={`card flex flex-col h-max sm:h-auto group overflow-hidden bg-white/10 backdrop-blur-lg shadow-lg rounded-2xl p-6 border border-white/10 hover:bg-white/10 align-start flex-none ${
    height || "h-full"
  } justify-start relative w-full transition-all duration-300 ease-in-out ${
    colSpan || "md:col-span-1"
  } ${rowSpan || ""}`}
>
  {
    href ? (
      <a href={href} class={`h-full w-full ${colorText || "text-white/90"}`}>
        <Icon
          name="ri:arrow-right-up-line"
          class="h-6 float-right text-white/50 group-hover:text-white/90 group-hover:translate-x-1 group-hover:-translate-y-1 transition-all ease-in-out duration-300 z-20"
        />
        <Content title={title} body={body}>
          <slot />
        </Content>
      </a>
    ) : (
      <Content title={title} body={body}>
        <slot />
      </Content>
    )
  }
  {expandable && (
    <button class="absolute bottom-4 right-4 text-white/50 hover:text-white/90 transition-colors duration-300">
      <Icon name="ri:arrow-down-s-line" class="h-6 w-6" />
    </button>
  )}
</div>

<style>
  .card :global(.card-row) {
    @apply -mx-6 px-6 py-2 transition-all duration-300 hover:bg-white/10;
  }
</style>
